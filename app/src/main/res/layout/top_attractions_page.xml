<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10sp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        card_view:cardCornerRadius="10dp"
        android:background="@drawable/ic_launcher_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_top_attractions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/emily_dickison_foreground"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/heading_top_attractions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emily Dickinson Museum"
                android:textSize="30sp"
                android:layout_above="@id/description_top_attractions"
                android:layout_marginLeft="20sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/description_top_attractions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayoutCard"
                android:text="sample Text"
                android:layout_marginLeft="20sp"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <LinearLayout
                android:id="@+id/linearLayoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#eaebed"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10sp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SHOW ALL"/>
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>